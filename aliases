# everyday convenience
alias l='ls -lah'
alias md='mkdir -p'
alias rmrf='rm -rf'
alias vim='nvim'
alias vi='nvim'
alias v='nvim'
alias d='docker'
alias y='yarn'
alias cls='printf \\033c' # clear scrollback
alias svi='sudo nvim'

# git
alias g='git'
alias gst='git status'
alias gl='git pull'
alias gp='git push'
alias ga='git add'
alias gc='git commit -S' # NOTE: need GPG keys properly setup
alias gd='git diff'
alias glog='git log --oneline --decorate --graph'
alias gcd='git checkout dev'

# kitty
alias icat='kitty +kitten icat'

# fzf
export FZF_DEFAULT_COMMAND='rg --files'
