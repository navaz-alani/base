[global]
    monitor = 0
    follow = keyboard
    width = 370
    height = 350
    offset = 20x40
    padding = 2
    horizontal_padding = 2
    transparency = 25
    font = MesloLGS NF 12
    format = "<b>%s</b>\n%b"

[urgency_low]
    background = "#1a1422" # color0
    foreground = "#857276" # color8
    timeout = 3

[urgency_normal]
    foreground = "#bea4a9" # color15
    background = "#944844" # color4
    timeout = 5

[urgency_critical]
    background = "#CD663B" # color1
    foreground = "#bea4a9" # color15
    frame_color = "#8F4F47" # color11
    timeout = 10

