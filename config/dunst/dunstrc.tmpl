[global]
    monitor = 0
    follow = keyboard
    width = 370
    height = 350
    offset = 20x40
    padding = 2
    horizontal_padding = 2
    transparency = 25
    font = MesloLGS NF 12
    format = "<b>%s</b>\n%b"

[urgency_low]
    background = "|color0|"
    foreground = "|color8|"
    timeout = 3

[urgency_normal]
    foreground = "|color15|"
    background = "|color4|"
    timeout = 5

[urgency_critical]
    background = "|color1|"
    foreground = "|color15|"
    frame_color = "|color11|"
    timeout = 10

